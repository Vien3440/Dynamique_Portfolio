{% block  header %}{%endblock%}

        
        {% block body %}
               <div class="container" >   
                   <div class="row">
                       
            {% for Projet in projets %}
  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
    <img src="{{asset('images/')~Projet.Images}}">
      <div class="caption">
        <h3>{{Projet.Titre}}</h3>
        <p>{{Projet.Description}}</p>
        <p><a href="http://{{Projet.Lien}}">{{Projet.Lien}}</a></p>
        <p><a href="{{ path('suprProjet', {'id':Projet.id})}}" class="btn btn-danger" role="button">Supr</a> <a href="{{ path('editProjet',{'id':Projet.id})}}" class="btn btn-success" role="button">Modif</a></p>
        
      </div>
    </div>
  </div>

        
        {% endfor %}
        </div>
        </div>
    {% endblock %}

    
